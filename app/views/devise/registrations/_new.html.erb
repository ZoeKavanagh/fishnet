<div>

  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-row">
      <div class="field col-xs-6">
        <%= f.text_field :firstname, class: 'form-control', placeholder: 'First name'%>
      </div>

      <div class="field col-xs-6">
        <%= f.text_field :lastname, class: 'form-control', placeholder: 'Surname' %>
      </div>
    </div>

    <div class="form-row">
      <div class="field col-xs-12">
        <%= f.email_field :email, id: 'sign-up-email', class: 'form-control', placeholder: 'email', autofocus: true, autocomplete: "email" 
      </div>
    </div>

    <div class="form-row">
      <div class="field col-xs-12">
          <%= f.password_field :password, id: 'sign-up-password', class: 'form-control', placeholder: 'New password', autocomplete: "off" %>
      </div>
    </div>

    <div class="form-row">
      <div class="field col-xs-12">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm password', autocomplete: "off" %>
      </div>
    </div>


    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
