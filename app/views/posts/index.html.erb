<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-8">
      
      <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>

      <h1>Feed</h1>
      <% @posts.each do |post| %>
        <%= render partial: 'post', locals: { post: post } %>
      <% end %>

    </div>
  </div>
</div>
