<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-8">
      <p id="notice"><%= notice %></p>
      <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>

      <h1>Feed</h1>

        <div class="card">
          <div class="card-header">
            <div class="col-md-6">
              <p>Name</p>
            </div>
            <div class="col-md-6">
              <p class="text-right"><a href="#">Date</a></p>
            </div>
          </div>

          <div class="card-body">
            <a href="#">
              <div class="alert alert-info">
                <p>Text body stuff</p>
              </div>
            </a>
            <p class="text-right">
              <i class="far fa-edit fa-lg"></i>
              <i class="far fa-trash-alt fa-lg"></i>
            </p>
          </div>
        </div>


        <% @posts.each do |post| %>
        <div class="card">
          <div class="card-body">
            <a href="#">
              <%= link_to(post) do %>
                <div class="alert alert-info">
                  <%= post.content %>
                </div>
              <% end %>
            </a>
            <p class="text-right">
              <%= link_to(edit_post_path(post)) do %>
                <i class="far fa-edit fa-lg"></i>
              <% end %>
              <%= link_to(post, method: :delete, data: { confirm: 'Are you sure?' }) do %>
                <i class="far fa-trash-alt fa-lg"></i>
              <% end %>
            </p>
          </div>
        </div>
        <% end %>

    </div>
  </div>
</div>
